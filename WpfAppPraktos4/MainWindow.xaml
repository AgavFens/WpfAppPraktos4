<Window x:Class="WpfAppPraktos4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPraktos4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Azure">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Content="Тест" x:Name="test"  HorizontalAlignment="Center" Width="256" Background="BurlyWood" Click="test_Click" Margin="0,70,0,70"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Content="Редактировать Тест" x:Name="redaktirovanie" HorizontalAlignment="Center" Width="256" Background="BurlyWood" Click="redaktirovanie_Click" Grid.Row="0"/>
            <TextBox x:Name="Password" MaxWidth="300" Background="Wheat" BorderBrush="Black" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="300" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
