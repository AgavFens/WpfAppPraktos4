<Window x:Class="WpfAppPraktos4.TestOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPraktos4"
        mc:Ignorable="d"
        Title="TestOkno" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="395*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="22*"/>
                <ColumnDefinition Width="69*"/>
                <ColumnDefinition Width="69*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="exit" Grid.Column="0" Content="Выйти" Click="exit_Click"/>
            <Button x:Name="redaktor" Grid.Column="1" Content="Редактор теста" Click="redaktor_Click" IsEnabled="False"/>
            <Button x:Name="proiti" Grid.Column="2" Content="Пройти тест" Click="proiti_Click"/>
        </Grid>
        <Grid Grid.Row="1">
            <Frame x:Name="Frameagav"/>
        </Grid>
    </Grid>
</Window>
